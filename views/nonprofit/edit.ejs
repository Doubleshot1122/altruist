<% layout('../index') %>
<% var edit = profile.user_name ? `${profile.user_name}?_method=PUT`: '' %>
<div class="container col-mid-2">
  <h1><%= title%></h1>
  <form class="well" method="POST" action="/nonprofits/edit/<%= edit %>">
    <div class="form-group form-input">
      <label for="user_name">Username</label>
      <input type="text" class="form-control" id="user_name" name="user_name" placeholder="Username" value="<%= profile.user_name || '' %>">
  </div>
  <div class="form-group form-input">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="<%= profile.password || '' %>">
  </div>
    <div class="form-group form-input">
      <label for="name">Organization Name</label>
      <input type="text" name="name" class="form-control" id="name" value="<%= profile.name ||  '' %>">
    </div>
    <div class="form-group form-input">
      <label for="type">Type</label>
      <input type="text" name="type" class="form-control" id="type" value="<%= profile.type || '' %>">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" name="description" class="form-control" id="description" value="<%= profile.description || '' %>"></textarea>
    </div>
    <div class="form-group form-input">
      <label for="contact_name">Contact Name</label>
      <input type="text" name="contact_name" class="form-control" id="contact_name" value="<%= profile.contact_name || ''%>">
    </div>
    <div class="form-group form-input">
      <label for="contact_email">Contact Email</label>
      <input class="form-control" type="email" id="contact_email" name="contact_email" value="<%= profile.contact_email || ''%>">
    </div>
    <div class="form-group form-input">
      <label for="contact_phone">Contact Phone</label>
      <input type="integer" class="form-control" id="phone_number" name="phone_number" value="<%= profile.contact_phone || ''%>">
    </div>
    <div class="form-group form-input">
      <label for="line_1">Address line 1</label>
      <input type="text" name="line_1" class="form-control" id="line_1" value="<%= profile.line_1 || ''%>">
    </div>
    <div class="form-group form-input">
      <label for="line_2">Address line 2</label>
      <input type="text" class="form-control" id="line_2" name="line_2" value="<%= profile.line_2 || ''%>">
    </div>
    <div class="form-group form-input">
      <label for="city">City</label>
      <input type="text" class="form-control" id="city" name="city" value="<%= profile.city || ''%>"></input>
    </div>
    <div class="form-group form-input">
      <label for="zip">Zip</label>
      <input type="integer" id="zip" class="form-control" name="zip" value="<%= profile.zip || ''%>">
    </div>
    <div class="form-group">
      <label for="comments">Comments</label>
      <textarea type="text" id="comments" class="form-control" name="comments" value="<%= profile.comments || ''%>"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Save Profile</button>
  </form>
</div>
