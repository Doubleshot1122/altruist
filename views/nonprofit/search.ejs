<% layout('../index') %>
<!-- <%= JSON.stringify(results) %> -->
<div class="row">
  <div class="col-md-4 div-display">
    <h3>Search for Volunteers</h3>
</div>
<div class= "col-md-offset-4 div-display">
  <a class="div-display login-link" href="/nonprofits/dashboard/Mercy">Dashboard</a>
  <a class="div-display login-link" href="/nonprofits/profile/Mercy">Profile</a>
</div>
</div>
<div class="well">
  <form class="form-group" action="/nonprofits/search">
      <div class="form-group form-input">
      <label for="start_date_time">Date</label>
      <input class="form-control" type="date" id="start_date_time" name="start_date_time" required>
    </div>
    <div class="form-group form-input">
      <label for="start_time"> Start time</label>
      <input class="form-control" type="time" step="3600" id="start_time" name="start_time" required>
    </div>
    <div class="form-group form-input">
      <label for="end_time"> End time</label>
      <input class="form-control" type="time" step="3600" id="end_time" name="end_time" required>
    </div>
    <legend for="skills">Skills/services</legend>
    <div class="checkbox form-group">
      <% for(var i = 0; i < results.skills.length; i++) {%>
      <label>
        <input type="checkbox" id="skills" value="<%= results.skills[i]%>" name="skills"><%= results.skills[i].type%>
      </label>
      <% } %>
    </div>
    <button type="submit" class="btn btn-default">Search</button>
  </form>
</div>
<h3>Search results</h3>
<div class="well">
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
      <tr class="info">
        <th>Name</th>
        <th>Skill</th>
        <th>Time Slot</th>
        <th>Volunteer Location</th>
        <th>Comments</th>
        <th>Book</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><a>Donny Barclay</a></td>
        <td>Teaching</td>
        <td>7pm - 8pm</td>
        <td>Redmond</td>
        <td>I can teach basic computer skills</td>
        <td><button>Book me</button></td>
      </tr>
    </tbody>
    </table>
  </div>
</div>
